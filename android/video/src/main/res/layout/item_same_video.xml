<?xml version="1.0" encoding="utf-8"?>
<com.yunbao.common.custom.MyRelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="0dp"
    app:mrl_ratio="1.33"
    android:layout_marginBottom="2dp"
    >

    <com.yunbao.common.custom.RatioImageView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_alignParentBottom="true"
        android:src="@mipmap/icon_video_home_bottom"
        app:ri_ratio="0.32258"
        />

    <ImageView
        android:id="@+id/thumb"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        />


    <TextView
        android:visibility="gone"
        android:paddingLeft="3.5dp"
        android:gravity="center_vertical"
        android:textColor="@color/textColorBlack"
        android:textSize="10dp"
        android:text="@string/video_first"
        android:layout_margin="8dp"
        android:id="@+id/tv_first"
        android:layout_width="32dp"
        android:background="@mipmap/bg_frist"
        android:layout_height="15dp"
        />

    <com.yunbao.common.custom.DrawableTextView
        android:background="@drawable/bg_charge"
        android:visibility="gone"
        android:layout_marginTop="10dp"
        android:layout_marginRight="5dp"
        android:paddingLeft="6dp"
        android:paddingRight="6dp"
        android:layout_alignParentRight="true"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:drawablePadding="5dp"
        app:dt_left_width="12dp"
        app:dt_left_height="12dp"
        android:textColor="@color/white"
        app:dt_left_drawable="@mipmap/icon_live_gift_zs"
        android:id="@+id/charge"
        android:gravity="center"
        android:textSize="11dp"
        />


</com.yunbao.common.custom.MyRelativeLayout>