<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="270dp"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_dialog_4"
    android:orientation="vertical">

    <TextView
        android:textSize="14sp"
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="18dp"
        android:layout_marginBottom="12dp"
        android:text="@string/video_input_fee"
        android:textColor="@color/textColorBlack" />

    <ImageView
        android:id="@+id/btn_close"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentRight="true"
        android:layout_marginTop="11dp"
        android:layout_marginRight="4dp"
        android:padding="8dp"
        android:src="@mipmap/icon_video_close"
        android:tint="@color/gray5" />


    <LinearLayout
        android:id="@+id/ll_content"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_below="@id/tv_title"
        android:layout_centerHorizontal="true"
        android:background="@drawable/bg_edit_charge"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <EditText
            android:inputType="number"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:id="@+id/et_num"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@null" />

        <ImageView
            android:layout_width="13dp"
            android:layout_height="13dp"
            android:layout_marginRight="13dp"
            android:src="@mipmap/icon_live_gift_zs" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_tip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/ll_content"
        android:layout_alignLeft="@id/ll_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="20dp"
        android:text="@string/video_input_fee_tip"
        android:textColor="@color/gray3"
        android:textSize="10dp" />


    <View
        android:layout_below="@id/tv_tip"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray7"/>


    <TextView
        android:textSize="14sp"
        android:id="@+id/btn_confirm"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_below="@id/tv_tip"
        android:layout_marginTop="1dp"
        android:textColor="@color/global"
        android:text="@string/confirm"
        android:gravity="center"/>


</RelativeLayout>