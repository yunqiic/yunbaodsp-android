<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0d0d0d">

    <FrameLayout
        android:id="@+id/layout_palyer"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </FrameLayout>

    <RelativeLayout
        android:id="@+id/group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="30dp">

        <ImageView
            android:id="@+id/btn_back"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="8dp"
            android:onClick="backClick"
            android:padding="10dp"
            android:src="@mipmap/icon_video_music_back"
            android:tint="@color/white"
            android:translationY="-2dp" />

        <com.yunbao.common.custom.DrawableTextView
            android:visibility="invisible"
            android:id="@+id/btn_music"
            android:layout_width="40dp"
            android:layout_height="50dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:drawablePadding="2dp"
            android:gravity="center_horizontal"
            android:paddingTop="3dp"
            android:text="@string/music"
            android:textColor="@color/white"
            android:textSize="11sp"
            app:dt_top_drawable="@mipmap/icon_video_music"
            app:dt_top_height="26dp"
            app:dt_top_width="26dp" />

        <com.yunbao.common.custom.DrawableTextView
            android:visibility="invisible"
            android:id="@+id/btn_music_volume"
            android:layout_width="40dp"
            android:layout_height="50dp"
            android:layout_marginRight="15dp"
            android:layout_toLeftOf="@id/btn_music"
            android:drawablePadding="2dp"
            android:gravity="center_horizontal"
            android:paddingTop="3dp"
            android:text="@string/music_volume"
            android:textColor="@color/white"
            android:textSize="11sp"
            app:dt_top_drawable="@mipmap/icon_video_volume"
            app:dt_top_height="26dp"
            app:dt_top_width="26dp" />
    </RelativeLayout>

    <TextView
        android:id="@+id/btn_next"
        android:layout_width="60dp"
        android:layout_height="25dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="32dp"
        android:background="@drawable/bg_btn_video_edit_next"
        android:gravity="center"
        android:text="@string/next"
        android:textColor="@color/white"
        android:textSize="12sp" />

    <RadioGroup
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="20dp"
        android:layout_toLeftOf="@id/btn_next">

        <com.yunbao.common.custom.DrawableRadioButton
            android:button="@null"
            android:checked="true"
            android:id="@+id/transition1"
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:layout_weight="1"
            android:gravity="center"
            android:paddingLeft="2dp"
            android:paddingRight="2dp"
            android:text="@string/activity_picture_join_left_right"
            android:textColor="@color/white"
            android:textSize="12sp"
            app:dt_top_drawable="@drawable/btn_left_right"
            app:dt_top_height="25dp"
            app:dt_top_width="25dp" />

        <com.yunbao.common.custom.DrawableRadioButton
            android:id="@+id/transition2"
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:button="@null"
            android:layout_weight="1"
            android:gravity="center"
            android:paddingLeft="2dp"
            android:paddingRight="2dp"
            android:text="@string/activity_picture_join_up_down"
            android:textColor="@color/white"
            android:textSize="12sp"
            app:dt_top_drawable="@drawable/btn_up_down"
            app:dt_top_height="25dp"
            app:dt_top_width="25dp" />

        <com.yunbao.common.custom.DrawableRadioButton
            android:id="@+id/transition3"
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:button="@null"
            android:layout_weight="1"
            android:gravity="center"
            android:paddingLeft="2dp"
            android:paddingRight="2dp"
            android:text="@string/activity_picture_join_zoom_in"
            android:textColor="@color/white"
            android:textSize="12sp"
            app:dt_top_drawable="@drawable/btn_zoom_in"
            app:dt_top_height="25dp"
            app:dt_top_width="25dp" />

        <com.yunbao.common.custom.DrawableRadioButton
            android:button="@null"
            android:id="@+id/transition4"
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:layout_weight="1"
            android:gravity="center"
            android:paddingLeft="2dp"
            android:paddingRight="2dp"
            android:text="@string/activity_picture_join_zoom_out"
            android:textColor="@color/white"
            android:textSize="12sp"
            app:dt_top_drawable="@drawable/btn_zoom_out"
            app:dt_top_height="25dp"
            app:dt_top_width="25dp" />

        <com.yunbao.common.custom.DrawableRadioButton
            android:button="@null"
            android:id="@+id/transition5"
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:layout_weight="1"
            android:gravity="center"
            android:paddingLeft="2dp"
            android:paddingRight="2dp"
            android:text="@string/activity_picture_join_rotate"
            android:textColor="@color/white"
            android:textSize="12sp"
            app:dt_top_drawable="@drawable/btn_rotate"
            app:dt_top_height="25dp"
            app:dt_top_width="25dp" />

        <com.yunbao.common.custom.DrawableRadioButton
            android:button="@null"
            android:id="@+id/transition6"
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:layout_weight="1"
            android:ellipsize="marquee"
            android:gravity="center"
            android:paddingLeft="2dp"
            android:paddingRight="2dp"
            android:singleLine="true"
            android:text="@string/activity_picture_join_fade_in_and_fade_out"
            android:textColor="@color/white"
            android:textSize="12sp"
            app:dt_top_drawable="@drawable/btn_gradient"
            app:dt_top_height="25dp"
            app:dt_top_width="25dp" />

    </RadioGroup>


    <ImageView
        android:visibility="gone"
        android:id="@+id/test"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"/>


</RelativeLayout>